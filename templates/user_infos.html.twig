{% extends 'base.html.twig' %}

{% block title %}Sur la page user{% endblock %}
{% block teeDay %}
{% endblock %}
{% block body %}
    {% if pagePerso %}
        {% for flash in app.flashes('notice') %}
            <div class="flash-notice">
                {{ flash }}
            </div>
        {% endfor %}
        <div class="row">
            <div class="col-4">
                <div class="list-group" id="list-tab" role="tablist">
                    <a class="list-group-item list-group-item-action active" id="list-home-list" data-toggle="list" href="#list-home" role="tab" aria-controls="home">VOS INFORMATIONS PERSONNELLES</a>
                    <a class="list-group-item list-group-item-action" id="list-profile-list" data-toggle="list" href="#list-pass" role="tab" aria-controls="profile">Modifier le mot de passe</a>
                    <a class="list-group-item list-group-item-action" id="list-messages-list" data-toggle="list" href="#list-messages" role="tab" aria-controls="messages">Messages</a>
                    <a class="list-group-item list-group-item-action" id="list-settings-list" data-toggle="list" href="#list-settings" role="tab" aria-controls="settings">Settings</a>
                </div>
            </div>
            <div class="col-8">
                <div class="tab-content" id="nav-tabContent">
                    <div class="tab-pane fade show active" id="list-home" role="tabpanel" aria-labelledby="list-home-list">
                        {{ form(formInfos) }}
                    </div>
                    <div class="tab-pane fade" id="list-pass" role="tabpanel" aria-labelledby="list-pass-list">
                        {{ form(formPass) }}
                    </div>
                    <div class="tab-pane fade" id="list-messages" role="tabpanel" aria-labelledby="list-messages-list">...</div>
                    <div class="tab-pane fade" id="list-settings" role="tabpanel" aria-labelledby="list-settings-list">...</div>
                </div>
            </div>
        </div>
    {% endif %}
{% endblock %}
{% block javascript %}
    <script src="{{ asset('build/user.js') }}"></script>
{% endblock %}
